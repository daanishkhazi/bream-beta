generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  auth0Id  String    @unique
  tenantId String
  name     String?
  verified Boolean   @default(false)
  role     Role      @default(USER)
  tenant   Tenant    @relation(fields: [tenantId], references: [id])
  machines Machine[] @relation("userMachine")
}

model Tenant {
  id       String    @id @default(cuid())
  name     String    @unique
  codes    Code[]
  machines Machine[]
  users    User[]
}

model Code {
  id       String  @id @default(cuid())
  code     String  @unique
  email    String
  name     String  @default("")
  valid    Boolean @default(true)
  tenantId String
  tenant   Tenant  @relation(fields: [tenantId], references: [id])
}

model Machine {
  id               String  @id @default(cuid())
  name             String
  description      String?
  generalNotes     String?
  maintenanceNotes String?
  prompt           String?
  isActive         Boolean @default(true)
  tenantId         String
  jobs             Job[]
  tenant           Tenant  @relation(fields: [tenantId], references: [id])
  users            User[]  @relation("userMachine")
}

model Job {
  id             String  @id @default(cuid())
  name           String
  part           String?
  description    String?
  setupNotes     String?
  operationNotes String?
  qualityNotes   String?
  prompt         String?
  gCode          String?
  isActive       Boolean @default(true)
  machineId      String
  machine        Machine @relation(fields: [machineId], references: [id])
}

enum Role {
  USER
  ADMIN
}
